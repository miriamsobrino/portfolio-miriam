---
import '../styles/global.css';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Soy Miriam Sobrino, Frontend Developer. Transformo ideas en interfaces web únicas, combinando programación y diseño para lograr una buena experiencia de usuario '
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <meta property='og:type' content='website' />
    <meta property='og:url' content='https://portfolio-miriam.vercel.app/' />
    <meta
      property='og:image'
      content='https://portfolio-miriam.vercel.app/preview-portfolio.webp'
    />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
