---
import TitleSection from './TitleSection.astro';
import { ToasterComponent } from './ToasterComponent.jsx';
---

<section
  id='contact'
  class='flex flex-col m-10 gap-6 justify-center mx-auto text-center items-center lg:mb-20 lg:mt-28'
>
  <TitleSection>Contacto</TitleSection>

  <div
    class='bg-blue w-[320px] lg:w-[460px] flex-col flex justify-center items-center text-bg mx-auto p-4 shadow border-2 border-black'
  >
    <p class='text-pretty text-md font-bold text-lg mb-2 lg:mb-0'>¿Hablamos?</p>
    <p class='text-pretty text-md mb-2 hidden lg:block'>
      Puedes contactarme a través de mi correo
    </p>

    <ToasterComponent client:visible />
  </div>
</section>
